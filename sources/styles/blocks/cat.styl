.cat
	clearfix()
	margin-bottom: 5px
	position: relative
	&-title
		float: left
		width: 70%
		linkColor($color.text)
		cursor: help
	&-value
		float: right
		width: 25%
	&-desc
		position: absolute
		visibility: hidden
		opacity: 0
		top: 100%
		background: $color.white
		font-size: 12px
		box-shadow: 0 1px 1px rgba(#000, 0.3)
		padding: 20px
		z-index: 2
		width: 95%
		transform: translate3d(0, -10px, 0)
		transition: opacity 0.3s, transform 0.3s, visibility 0.3s
		img
			margin-bottom: 10px
	&-title:hover + &-desc, &-desc:hover
		visibility: visible
		opacity: 1
		transform: none
