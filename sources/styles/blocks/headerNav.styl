.headerNav
	background: $color.blue
	overflow: hidden
	padding: 17px 0 0 7%
	height: 90px
	// font-weight: $font.bold
	font-size: 16px
	// font-size: 14px
	transition: font-size 0.1s, background 0.3s
	+media('max-width: 1200px')
		font-size: 15px
		padding-top: 18px
	+media('max-width: 1150px')
		font-size: 14px
		padding-top: 20px
	+media('max-width: 1100px')
		font-size: 13px
	&-column
		float: left
		margin-right: 7%
		// margin-right: 3%
	&--errorpage
		background: transparent
		padding: 0
		margin: 50px auto 0
		overflow: visible
	&--errorpage &-column
		float: none
		margin: 0 3%
		display: inline-block
		text-align: left
		font-weight: bold
	a
		display: block
		linkColor(#fff)
		&.is-active
			color: $color.yellow
			cursor: default
			u
				border-color: transparent
	&--errorpage a
		linkColor($color.blue)
	&--summer
		background: #FF7A54
	&--summer a.is-active
		color: $color.text