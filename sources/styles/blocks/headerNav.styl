.headerNav
	background: $color.blue
	overflow: hidden
	padding: 17px 0 0 7%
	height: 90px
	// font-weight: $font.bold
	font-size: 16px
	// font-size: 14px
	transition: font-size 0.1s
	+media('max-width: 1140px')
		font-size: 15px
		padding-top: 18px
	+media('max-width: 1100px')
		font-size: 14px
		padding-top: 20px
	+media('max-width: 1060px')
		font-size: 13px
	&-column
		float: left
		margin-right: 7%
		// margin-right: 3%
	a
		display: block
		margin-top: 5px
		linkColor(#fff)