.archive
	position: absolute
	top: 0
	bottom: 0
	// background: pink
	width: 100%
	left: 0
	background: $color.white
	height: 100%
	&-header
		height: 115px
		background: $color.white
		position: relative
		font-weight: $font.xbold
		font-size: 30px
		font-style: italic
		line-height: 115px
		padding-left: 50px
		&:before, &:after
			position: absolute
			content: ''
		&:before
			background: $color.white
			bottom: 0
			height: 20px
			z-index: 2
			left: 0
			width: 100%
		&:after
			left: 2px
			right: 2px
			box-shadow: 0 0 5px rgba(#000, 0.7)
			height: 1px
			bottom: 0
			z-index: 1
	&-footer
		position: absolute
		bottom: 0
		height: 115px
		width: 100%
		background: $color.white
		font-weight: $font.xbold
		font-size: 24px
		font-style: italic
		line-height: 115px
		text-align: center
		&:before, &:after
			position: absolute
			content: ''
		&:before
			background: $color.white
			top: 0
			height: 20px
			z-index: 2
			left: 0
			width: 100%
		&:after
			left: 2px
			right: 2px
			box-shadow: 0 0 5px rgba(#000, 0.7)
			height: 1px
			top: 1px
			z-index: 1
	&-item
		display: block
		margin: 15px 0 15px 50px
		width: 195px
	&-pic
		width: 195px
		display: block
		height: 128px
		position: relative
		&:before, &:after
			content: ''
			position: absolute
			display: block
			color: $color.yellow
	&-item.is-active &-pic
		&:after
			left: 0
			top: 0
			height: 100%
			width: 100%
			border: 5px solid $color.yellow
		&:before
			right: 100%
			width: 0
			height: 0
			border-width: 64px 16px
			border-style: solid
			border-color: transparent
			border-right-color: $color.yellow


	&-title
		margin-top: 7px
		display: block
		font-weight: $font.bold
		font-style: italic
		line-height: 1.5
	.swiper-container
		margin 0 auto
		position relative
		overflow hidden
		backface-visibility hidden
		z-index 1
		height: 100%
		position: absolute
		top: 115px
		bottom: 115px
		height: auto
	.swiper-wrapper
		position relative
		width 100%
		transition-property transform, left, top
		transition-duration 0s
		transform translate3d(0px,0,0)
		transition-timing-function ease
		box-sizing content-box
		height: 0

	.swiper-free-mode > .swiper-wrapper
		transition-timing-function ease-out
		margin 0 auto

	.swiper-slide
		float left
		box-sizing content-box
		width: 100%
		padding: 0
		box-sizing border-box


	/* IE10 Windows Phone 8 Fixes */
	.swiper-wp8-horizontal
		-ms-touch-action pan-y

	.swiper-wp8-vertical
		-ms-touch-action pan-x

