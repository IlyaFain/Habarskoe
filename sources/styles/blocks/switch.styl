.switcher
	margin-left: -20px
	&-item
		background: transparent
		border-radius: 100px
		padding: 10px 20px
		line-height: 1.3
		font-weight: $font.bold
		transition: background 0.3s, color 0.3s
		// margin-right: 5px
		font-size: 18px
		white-space: nowrap
		display: inline-block
		&.is-active
			cursor: default
			background: $color.blue
			color: $color.white
			u
				border-color: transparent
	&--s
		margin-left: -10px
	&--s &-item
		font-size: 16px
		padding: 8px 10px
	&--sm
		margin-left: -10px
	&--sm &-item
		font-size: 16px
		padding: 8px 15px
	&--xs
		margin-left: -10px
	&--xs &-item
		font-size: 14px
		padding: 5px 10px

.switchBlock
	visibility: hidden
	opacity: 0
	position: absolute
	top: 0
	height: 0
	overflow: hidden
	&.is-visible
		visibility: visible
		opacity: 1
		position: relative
		height: auto
		overflow: visible