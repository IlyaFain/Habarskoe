.swiper-arrows
	display: block
	text-align: right
	margin-right: 20px
	margin-top: 20px
.swiper-arrow
	user-select: none
	margin-left: 10px
	width: 16px
	height: 16px
	background-repeat: no-repeat
	background-position: 50% 50%
	display: inline-block
	transition: background 0.3s
	cursor: pointer
	&--prev
		background-image: inline('../../sources/images/arrowGrayPrev.png')
		&:hover
			background-image: inline('../../sources/images/arrowBluePrev.png')
	&--next
		background-image: inline('../../sources/images/arrowGrayNext.png')
		&:hover
			background-image: inline('../../sources/images/arrowBlueNext.png')





.swiper-scrollbar
	border-radius: 10px
	position: relative
	-ms-touch-action: none
