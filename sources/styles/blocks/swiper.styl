.swiper-pagination
	display: block
	text-align: right
	margin-right: 20px
	margin-top: 40px
	clearfix()
.swiper-pagination-switch
	display: none
	width: 10px
	height: 10px
	background: red
	margin: 0 0 0 15px
	border: 2px solid $color.white
	background: transparent
	border-radius: 100px
	cursor: pointer
	&:nth-child(3n+1)
		display: inline-block
.swiper-active-switch
	background: $color.white

