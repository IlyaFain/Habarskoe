.gallery
	padding:
	&-item
		display: block
		// padding: 0 10px 10px 0
		width: 300px
		position: relative
	&-zoom
		position: absolute
		left: 0
		top: 50%
		margin-top: -70px
		z-index: 2
		opacity: 0
		width: 100%
		text-align: center
		transition: opacity 0.3s
	&-item:hover &-zoom
		opacity: 1
	&-more
		display: block
		position: absolute
		bottom: 0
		width: 300px
		background: rgba(#fff, 0.6)
		left: 50%
		margin-left: -150px
		margin-bottom: -85px
		padding: 50px 40px
		text-align: center
		font-style: italic
		font-weight: bold
		linkColor($color.blue)
		font-size: 18px
