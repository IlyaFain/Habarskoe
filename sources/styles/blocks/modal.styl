	&-zoom
		cursor: zoom-in
	&.is-zoomed &-zoom
		cursor: zoom-out

	&-close
		z-index: 5
		position: absolute
		right: 10px
		top: 10px

	&-title
		color: $color.white
		text-align: center
		background: $color.dark
		.plink
			linkColor($color.gray)
			margin: 0 10px
			&.is-active
				linkColor($color.white)
				cursor: default
				u
					border-color: transparent !important


	&-arrow
		user-select: none
		width: 24px
		height: 45px
		background-repeat: no-repeat
		background-position: 50% 50%
		display: inline-block
		transition: background 0.3s, opacity 0.3s
		cursor: pointer
		position: absolute
		top: 50%
		margin-top: -25px
		opacity: 0
		visibility: hidden
		&.is-visible
			opacity: 1
			visibility: visible
		&--prev
			background-image: inline('../../sources/images/arrowLargeGrayPrev.png')
			left: 10px
			&:hover
				background-image: inline('../../sources/images/arrowLargeBluePrev.png')
		&--next
			background-image: inline('../../sources/images/arrowLargeGrayNext.png')
			right: 10px
			&:hover
				background-image: inline('../../sources/images/arrowLargeBlueNext.png')
