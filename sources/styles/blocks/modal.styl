body.is-locked
	overflow: hidden

.modal
	z-index: 10
	position: fixed
	transition: transform 0.4s, opacity 0.7s, visibility 0.4s
	top: 0
	left: 0
	right: 0
	bottom: 0
	height: 100%
	overflow: auto
	perspective: 1000px
	transform: scale3d(0,0,0) translate3d(0, -1000px, 0)
	visibility: hidden
	opacity: 0
	background: #006eb6
	background: rgba(#006eb6, 0.25)
	&.is-visible
		visibility: visible
		opacity: 1
		transform: none

	&-overlay
		position: absolute
		left: 0
		top: 0
		bottom: 0
		width: 100%
		height: 100%
		// opacity: 0.25
		z-index: 1

	&-window
		z-index: 2
		display: block
		position: absolute
		transition: transform 0.4s, opacity 0.4s, visibility 0.4s, width 0.4s, margin 0.4s, left 0.4s, top 0.4s, height 0.4s
		padding: 40px 50px 30px
		margin-top: 90px
		margin-bottom: 90px
		left: 50%
		width: 780px
		margin-left: -390px
		background: $color.dark
		text-align: center
		color: $color.white
		&--light
			background: $color.white
			color: $color.text
			text-align: left
	&-pic
		background: $color.dark
		user-select: none
		img
			// width: 100%
			max-height: 100%
			max-width: 100%
			padding-bottom: 20px
			user-select: none
	&.is-zoomed &-window
		left: 0
		top: 0
		width: 100%
		min-height: 100%
		margin-left: 0
		margin-top: 0


