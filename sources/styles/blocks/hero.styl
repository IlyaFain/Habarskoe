.hero
	.constrain
		height: 440px
		overflow: hidden
		position: relative
	&-seasons
		width: 200%
	&-season
		float: left
		width: 50%
		height: 440px
		visibility: hidden
		opacity: 0
		transition: visibility 0.3s, opacity 0.3s, margin 0.3s
		perspective: 1000
		&.is-visible
			visibility: visible
			opacity: 1
		&--summer
			margin-left: -50%
			&.is-visible
				margin-left: 0



	&-pic
		height: 440px
		background-color: #FFF
		background-position: 50% 50%
		background-size: cover
		position: absolute
		left: 0
		top: 0
		width: 100%
		backface-visibility: hidden
		transition: transform 1s, opacity 1s
		opacity: 0.5
		&:first-child
			transform: rotateY(180deg)
		&:last-child
			transform: rotateY(-180deg)
		&.is-visible
			z-index: 1
			visibility: visible
			opacity: 1
			transform: rotateY(0deg)

