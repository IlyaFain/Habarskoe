.title, h1, h2, h3, h4
	line-height: 1.2
	margin-bottom: 0.8em
	font-weight: $font.bold
	small
		display: block
		font-size: 0.5em
.title--xl, h1
	font-size: 30px
	font-weight: $font.xbold
	font-style: italic
h2, .title--l
	font-size: 24px
	font-style: italic
	font-weight: $font.xbold
.title--m, h3
	font-size: 18px
	small
		font-size: 12px
		font-weight: normal
.title--s, h4
	font-size: 14px
	margin-bottom: 0.2em
	small
		font-size: 14px
.title--xs, h5
	font-size: 14px
	font-weight: normal
	margin: 0