.checkbox
	display: inline-block
	vertical-align: baseline
	cursor: pointer
	user-select: none
	position: relative
	&-desc
		display: block
		vertical-align: baseline
		// margin: 0.3em 0 0 0.5em
		position: relative
		padding-left: 35px
		margin-top: -22px
		z-index: 0
	&-input
		display: none
	&-fake
		display: inline-block
		vertical-align: middle
		width: 20px
		height: 20px
		background-color: $color.yellow
		position: relative
		backface-visibility: hidden
		z-index: 2
	&-icon
		display: inline-block
		opacity: 0
		position: relative
		transform: translate3d(0, 0px, 0)
		left: 2px
		bottom: 4px
	&-input:checked + &-fake
		.checkbox-icon
			opacity: 1
			transform: translate3d(0, 0, 0)
	&.is-disabled &-input + &-fake
		// border: 1px solid lighten($color.border, 35%)
		box-shadow: none
		opacity: 0.8
		// .checkbox-icon
			// fill: $color.disabled
	&:active &-fake
		// border-color: $color.borderHover
		.checkbox-icon
			transform: translate3d(0, 1px, 0)
			opacity: 0.5

	&-label
		display: inline-block
		vertical-align: baseline
		margin: 0 0 0 0.4em
		position: relative
		// color: $color.base
		// &--dull
			// color: $color.dull

	&--s &-fake
		width: 13px
		height: 13px
	&--s &-icon
		width: 13px
		height: 13px
		top: -1px
		left: -1px
	&--s &-label
		margin-left: 0.4em
	&--l &-label
		font-size: 15px
	/*&--l &-desc
		margin-left: 0.55em*/
	&--xl &-label
		font-size: 16px
	&.is-disabled
		cursor: default
		pointer-events: none
	&.is-disabled &-label, .is-full-disabled &-label
