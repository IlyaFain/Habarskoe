.calendar
	width: 100%
	font-size: 12px
	border-collapse: separate
	table-layout: fixed
	&-popup
		visibility: hidden
		opacity: 0
		transition: visibility 0.3s, opacity 0.3s
		background-position: 50%
		background-size: cover
		background-repeat: no-repeat
		position: absolute
		width: 300%
		height: 300%
		top: -123px
		right: 100%
		margin-right: 3px
		box-sizing: content-box
		padding: 4px 5px
		z-index: 5
		color: #fff
		font-size: 18px
		line-height: 1.2
		&Wrap
			padding: 40px 25px
	td:hover &-popup
		visibility: visible
		opacity: 1
	&-date
		position: absolute
		right: 10px
		bottom: 5px
		font-style: italic
		font-size: 16px
		font-weight: bold
	td, th
		height: 120px !important
		text-align: left
		margin: 10px
		border-spacing: 10px
		&:last-child
			padding-right: 0
	th
		border: none
		padding: 5px
		font-style: italic
		font-weight: bold
		color: $color.dark
		font-size: 15px
		height: auto !important
	td
		color: #BEBEBE
		padding: 5px
		height: 90px
		vertical-align: top
		border: 1px solid #E1E1E1
		position: relative
		font-style: italic
		font-weight: bold
	tbody th
		padding-top: 1em
		padding-bottom: 0
