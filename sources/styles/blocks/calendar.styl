.calendar
	width: 100%
	font-size: 12px
	border-collapse: separate
	&-date
		position: absolute
		right: 10px
		bottom: 5px
		font-style: italic
		font-size: 16px
		font-weight: bold
	td, th
		width: 15%
		text-align: left
		margin: 10px
		border-spacing: 10px
		&:last-child
			padding-right: 0
	th
		border: none
		padding: 5px
		font-style: italic
		font-weight: bold
		color: $color.dark
		font-size: 15px
	td
		color: #BEBEBE
		padding: 5px
		height: 90px
		vertical-align: top
		border: 1px solid #E1E1E1
		position: relative
		font-style: italic
		font-weight: bold
	tbody th
		padding-top: 1em
		padding-bottom: 0
