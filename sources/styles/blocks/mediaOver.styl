.soon .swiper-slide .mediaOver
	height: 100%
.mediaOver
	position: relative
	display: block
	line-height: 1.2
	// overflow: hidden
	// min-height: 100px/
	&-pic
		width: 100%
		// position: absolute
		// height: 100%
		display: block
	&-text
		position: absolute
		background: #FFF
		background: rgba(#fff, 0.9)
		width: 100%
		bottom: 0
		left: 0
		padding: 5%
		display: block
		transition: background 0.3s
	&-date
		font-style: italic
		font-size: 14px
	&-title
		font-size: 18px
		font-weight: $font.bold
	&-zoom
		position: absolute
		left: 0
		top: 0
		z-index: 2
		width: 100%
		height: 100%
	&:hover
		color: $color.white
		opacity: 1
	&:hover &-text
		background: $color.blue
		background: rgba($color.blue)
