path($name, $ext = 'png')
	return '../../sources/images/' + $name + '.' + $ext

icon($name, $ext = 'png')
	$path = path($name, $ext)
	$size = image-size($path)
	.i-{$name}
		display: inline-block
		background-repeat: no-repeat
		background-position: 50% 50%
		background-image: inline($path)
		{block}
		width: $size[0] unless @width
		height: $size[1] unless @height

